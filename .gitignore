# 1. Create .gitignore FIRST (blocks future bloat)
cat > .gitignore << 'EOF'
# Venv + Dependencies (15k+ files!)
venv/
__pycache__/
*.pyc
.crawl4ai/
chromium*/
*.csv
*.json
*.xlsx
.env
data/
output/
pip-wheel-metadata/
.pytest_cache/
.mypy_cache/
EOF

# 2. Remove tracked bloat + recommit clean
git rm -r --cached venv/ .crawl4ai/ __pycache__/ *.csv 2>/dev/null || true
git add .gitignore
git commit -m "ðŸ”¥ Clean: Remove 10k dependency files + .gitignore"
git push
